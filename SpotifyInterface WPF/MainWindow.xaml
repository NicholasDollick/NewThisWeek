<Window x:Class="SpotifyInterface_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyInterface_WPF"
        mc:Ignorable="d" FontSize="15" FontFamily="Calibri"
        Title="New This Week" Height="420" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Image x:Name="userIcon" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1" Source="C:\Users\Carter\Dropbox\‪1483559400759.jpg"
               ClipToBounds="True" Margin="10" Width="120" Height="120"/>

        <GroupBox Grid.Row="2" Grid.Column="1" Header="User Details" Margin="0,0,5,0">
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                <TextBlock x:Name="userName" Text="   Name:   -" Margin="10,3,0,0" HorizontalAlignment="Left"/>
                <TextBlock x:Name="userCountry" Text="Country:   -" Margin="10,3,0,0" HorizontalAlignment="Left"/>
                <TextBlock x:Name="userEmail" Text="    Email:   -" Margin="10,3,0,0" HorizontalAlignment="Left"/>
                <TextBlock x:Name="accountType" Text="Account:   -" Margin="10,3,0,0" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>

        <Button x:Name="authButton" Content=" Authenticate Session " Grid.Row="3" Grid.Column="1" 
                Grid.ColumnSpan="1" Margin="15,5,15,5" Height="24" Click="authButton_Click" BorderThickness="1.5">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFE0E0E0" Offset="1"/>
                    <GradientStop Color="White"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>

        <GroupBox Grid.Row="4" Grid.Column="1" Header="Input Controls">
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
                <RadioButton x:Name="fromFile" Content="Data from file" />
            </StackPanel>
        </GroupBox>

        <ListBox x:Name="playListBox" Grid.Row="1" Grid.Column="2" Grid.RowSpan="5" Grid.ColumnSpan="1">
            <ListBoxItem>
                <TextBlock Text="                                           "/>
            </ListBoxItem>
        </ListBox>



    </Grid>
</Window>
