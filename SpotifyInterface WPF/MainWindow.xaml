<NavigationWindow x:Class="SpotifyInterface_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyInterface_WPF"
        mc:Ignorable="d"
        Title="New This Week" Height="500" Width="900"
        Source="Views/LoginView.xaml"
        SizeToContent="Manual"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#FF7E7E7E" ShowsNavigationUI="false">
    <NavigationWindow.Style>
        <Style TargetType="{x:Type NavigationWindow}">
            <Setter Property="Title" Value="New This Week"/>
        </Style>
    </NavigationWindow.Style> 
</NavigationWindow>